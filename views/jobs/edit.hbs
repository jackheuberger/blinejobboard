<div class="container">
    <h6>Job Editor</h6>
    <h5>Logged in as {{name}} with {{email}}.</h5>

    <form action="/jobs/{{job._id}}" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="jobTitle">Job Title</label>
            <input type="text" class="form-control" id="jobTitle" name="title" value="{{job.title}}">
            <small id="jobTitle" class="form-text text-muted"></small>
        </div>
        <div class="form-group">
            <label for="jobDesc">Description</label>
            <textarea class="form-control" id="jobDesc body" name="body">{{job.body}}</textarea>
        </div>
        <input type="submit" value="Post" class="btn btn-primary">
        <a href="/jobs" class="btn btn-danger">Cancel</a>
    </form>
</div>