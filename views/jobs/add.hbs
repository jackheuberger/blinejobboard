<div class="container">
    <h6>Job Poster</h6>
    <h5>Logged in as {{name}} with {{email}}.</h5>

    <form action="/jobs/add" method="POST">
        <div class="form-group">
            <label for="jobTitle">Job Title (100 char max)</label>
            <input type="text" class="form-control" id="jobTitle" name="title">
            <small id="jobTitle" class="form-text text-muted"></small>
        </div>
        <div class="form-group">
            <label for="editor">Description</label>
            <textarea class="form-control" id="editor" name="body" rows="8"></textarea>
        </div>
        <input type="submit" value="Post" class="btn btn-primary">
        <a href="/jobs" class="btn btn-danger">Cancel</a>
    </form>
</div>